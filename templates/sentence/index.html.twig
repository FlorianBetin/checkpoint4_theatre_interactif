{% extends 'base.html.twig' %}

{% block title %}Bon visionnage
{% endblock %}

{% block body %}

	<div class='igmbackgroundsentence' style="background-image: url(/uploads/images/scene_content/{{ sentence.background }})"></div>

	<a href="{{ path('app_piece_show', {'slug': piece.slug}) }}" type="button" class="btn btn-info btn-lg scenebackbutton" role="button" aria-disabled="true">Back to scenes</a>

	<img class='imgcharaone' src="/uploads/images/scene_content/{{ sentence.characterOne }}" alt="">

	<div class='scenetxttile'>

		<p class="textescene">{{ sentence.content }}</p>

		<div class="scenebuttons">
			<a href="{{ path('app_piece_play', {'piece_slug': piece.slug, 'acte_slug': acte.slug, 'sentence_step': sentence.step - 1}) }}" class="btn btn btn-warning">
				<img src="{{asset('build/images/caret-left-fill.svg')}}" alt="">
			</a>

			<a href="{{ path('app_piece_play', {'piece_slug': piece.slug, 'acte_slug': acte.slug, 'sentence_step': sentence.step + 1}) }}" class="btn btn btn-warning">
				<img src="{{asset('build/images/caret-right-fill.svg')}}" alt="">
			</a>
		</div>
	</div>

{% endblock %}
