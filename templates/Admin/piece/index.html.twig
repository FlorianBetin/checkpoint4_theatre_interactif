{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}

<a href="{{ path('app_admin') }}">Retour au panneau général</a>

    <h1>Piece index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td>{{ piece.id }}</td>
                <td>{{ piece.title }}</td>
                <td>{{ piece.description }}</td>
                <td>{{ piece.image }}</td>
                <td>
                    <a href="{{ path('admin_app_piece_show', {'id': piece.id}) }}">show</a>
                    <a href="{{ path('admin_app_piece_edit', {'id': piece.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_app_piece_new') }}">Create new</a>
{% endblock %}
