{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
    <h1>Piece</h1>

<img src="/uploads/images/piececover/{{ piece.image }}" alt="{{piece.title}}">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ piece.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ piece.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ piece.image }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ piece.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_app_piece_index') }}">back to list</a>

    <a href="{{ path('admin_app_piece_edit', {'id': piece.id}) }}">edit</a>

    {{ include('Admin/piece/_delete_form.html.twig') }}
{% endblock %}
