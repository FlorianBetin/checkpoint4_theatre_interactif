{% extends 'base.html.twig' %}

{% block title %}Acte index{% endblock %}

{% block body %}
    <h1>Acte index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acte in actes %}
            <tr>
                <td>{{ acte.id }}</td>
                <td>{{ acte.title }}</td>
                <td>{{ acte.slug }}</td>
                <td>
                    <a href="{{ path('app_acte_show', {'id': acte.id}) }}">show</a>
                    <a href="{{ path('app_acte_edit', {'id': acte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_acte_new') }}">Create new</a>
{% endblock %}
